<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/lock_settings_picker_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings_ex">
    <PreferenceCategory android:title="@string/lock_settings_title" android:key="security_category">
        <PreferenceScreen android:persistent="false" android:title="@string/unlock_set_unlock_launch_picker_title" android:key="unlock_set_or_change" android:summary="@string/unlock_set_unlock_mode_pin" settings:keywords="@string/keywords_lockscreen" />
        <SwitchPreference android:persistent="false" android:title="@string/lock_directly_show_pin" android:key="directlyshow" />
        <com.android.settings_ex.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/unlock_scramble_pin_layout_title" android:key="lockscreen_scramble_pin_layout" android:summary="@string/unlock_scramble_pin_layout_summary" />
        <ListPreference android:persistent="false" android:entries="@array/lock_after_timeout_entries" android:title="@string/lock_after_timeout" android:key="lock_after_timeout" android:summary="@string/lock_after_timeout_summary" android:entryValues="@array/lock_after_timeout_values" />
        <SwitchPreference android:title="@string/lockpattern_settings_enable_power_button_instantly_locks" android:key="power_button_instantly_locks" />
        <Preference android:persistent="false" android:title="@string/manage_trust_agents" android:key="manage_trust_agents" android:summary="@string/manage_trust_agents_summary" android:fragment="com.android.settings_ex.TrustAgentSettings" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_general" android:key="general_category">
        <com.android.settings_ex.SingleLineSummaryPreference android:title="@string/owner_info_settings_title" android:key="owner_info_settings" android:summary="@string/owner_info_settings_summary" />
        <PreferenceScreen android:title="@string/lockscreen_targets_message" android:key="lockscreen_shortcuts_settings">
            <intent android:targetPackage="com.android.systemui" android:targetClass="com.android.systemui.cm.LockscreenShortcutsActivity" />
        </PreferenceScreen>
        <com.android.settings_ex.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_visualizer_title" android:key="lockscreen_visualizer" android:defaultValue="true" />
        <com.android.settings_ex.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_blur_enabled_title" android:key="lock_screen_blur_enabled" android:defaultValue="true" />
        <com.android.settings_ex.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_weather_enabled_title" android:key="lock_screen_weather_enabled" android:defaultValue="false" />
        <PreferenceScreen android:title="@string/lockscreen_wallpaper_title" android:key="lockscreen_wallpaper">
            <intent android:action="android.intent.action.SET_KEYGUARD_WALLPAPER" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>